#include <stdio.h>

int
main ()
{
  int n;
  scanf ("%d", &n);
  if (n <= 1 || (n % 2 == 0))
    return 0;
  for (int i = 0; i < n - n / 2; i++)
    {				// n=
      for (int j = 0; j <= i; j++)
	{
	  printf (" ");
	}
      for (int k = 0; k < n - 2 * i; k++)
	{
	  printf ("@");
	}
      printf ("\n");
    }
  for (int i = 0; i < n; i++)
    {
      for (int j = 0; j < n; j++)
	{
	  if ((i == 0) || (j == 0) || (j == n - 1))
	    printf ("*");
	  else
	    printf (" ");
	}
      printf ("\n");
    }
}
