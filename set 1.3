#include <stdio.h>
int main ()
{
  int n;
  scanf ("%d", &n);
  if (n <= 1 || n % 2 == 0)
    return 0;
  for (int i = 0; i < n; i++)
    {
      for (int j = 0; j < 2 * n + n / 2 + 1; j++)
	{
	  if (i < n / 2 && j <= i || i > n / 2 && j < n - i || i == n / 2
	      && j < n - n / 2)
	    printf ("@");
	  else if (i == n / 2 && j <= n + n / 2)
	    printf ("*");
	  else if (j >= 2 * n - n / 2)
	    printf ("@");
	  else
	    printf (" ");
	}
      printf ("\n");
    }
}
