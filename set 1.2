#include <stdio.h>

int
main ()
{
  int n;
  n = 9;
  for (int i = 0; i < n; i++)
    {
      for (int j = 0; j < n; j++)
	{
	  if ((i < n / 2 && j <= i) || (i > n / 2 && j < n - i) || i == n / 2)
	    printf ("*");
	  else
	    printf (" ");
	}
      if (i == n / 2 - 1 || i == n / 2 + 1)
	printf (" *");
      if (i == n / 2)
	printf ("***");
      printf ("\n");
    }
}
